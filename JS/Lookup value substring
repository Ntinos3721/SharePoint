// List View - Substring Long String Sample// Muawiyah Shannak , @MuShannak(function () {    // Create object that have the context information about the field that we want to change it's output render     var lookUpFieldContext = {};    lookUpFieldContext.Templates = {};    lookUpFieldContext.Templates.Fields = {        // Apply the new rendering for Body field on list view        "Beneficial": { "View": lookUpFieldTemplate },        "Status": { "View": lookUpFieldTemplate },    };    SPClientTemplates.TemplateManager.RegisterTemplateOverrides(lookUpFieldContext);})();// This function provides the rendering logicfunction lookUpFieldTemplate(ctx) {        var output = [];     var field = ctx.CurrentItem[ctx.CurrentFieldSchema.Name];    // Check if field contains data    if (field.length > 0) {      // field[0].lookupId -> gives you the linked item ID      var lookupValue = field[0].lookupValue;    }        output.push(lookupValue);        var lookUpValue = output.join('');    if (lookUpValue.length > 0)    {      //This regex expression use to delete html tags from the Body field      var regex = /(<([^>]+)>)/ig;      lookUpValue = lookUpValue.replace(regex, "");      var newLookUpValue = lookUpValue;      if (lookUpValue && lookUpValue.length >= 20)      {          newLookUpValue = lookUpValue.substring(0, 20) + " ...";      }      return "<span title='" + lookUpValue + "'>" + newLookUpValue + "</span>";   }      return "";}
